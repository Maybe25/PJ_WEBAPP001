@using PJ_WEBAPP001.Utils
@model IEnumerable<PJ_WEBAPP001.Models.MARCAS>

@{
    int idRol = int.Parse(SessionPersister.UserRol.ToString());
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">:::: Mantenimiento de MARCAS ::::</h2>
@if (idRol == 1)
{
<p>
    @Html.ActionLink("Agregar nueva Marca", "Create")
</p>
}
<table class="table table-bordered table-striped">
    <tr>
        <th class="text-center">
            Descripcion de Marca
        </th>
        <th class="text-center">Ver Detalle</th>
        <th class="text-center"> Actualizar </th>
        <th class="text-center"> Eliminar </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.DES_MAR)
            </td>
            <td style="text-align:center" class="text-right">
                <a class="btn btn-success" href="../Marcas/Details/@item.IDE_MAR" title="Detalles">
                    <i class="glyphicon glyphicon-eye-open "></i>
                </a>
            </td>
            <td style="text-align:center" class="text-right">
                <a class="btn btn-info" href="../Marcas/Edit/@item.IDE_MAR" title="Editar">
                    <i class="glyphicon glyphicon-cog"></i>
                </a>
            </td>
            <td style="text-align:center" class="text-right">
                <a class="btn btn-danger" href="../Marcas/Delete/@item.IDE_MAR" title="Borrar">
                    <i class="glyphicon glyphicon-trash"></i>
                </a>
            </td>
            
        </tr>
    }

</table>
